<%- include("./partials/Head")  %> 
<body>
    <%- include("./partials/Head")  %> 
      <%- include("./partials/navbar") %> 
      <%- include("./partials/messages") %> 
      <!-- header ends -->
    <div class="container" style="max-width: 1100px;">
        <h1 class="mb-1 text-dark text-center mt-2">New blog post</h1>

        <form action="/edit/<%-posts._id %> " method="POST" enctype="multipart/form-data">
            <div class="form-group">

                <label for="title" class="text-dark">Title :</label>
                <input type="text" class="form-control" placeholder="Title" name="title"  value="<%- posts.title %> ">
            </div>

            <div class="form-group">

                <label for="author" class="text-dark">Author :</label>
                <input type="text" class="form-control" placeholder="Author" name="author"  value="<%- posts.author %>">
            </div>
            <div class="form-group">

                <label for="description" class="text-dark">Description :</label>
                <textarea name="description" placeholder="Description" class="form-control" value="<%- posts.description %> "></textarea>
            </div>
            <div class="form-group py-2">
                <label for="image" class="text-dark">Upload image :</label><br>
                <input type="file" name="image" id="image" class="form-control-file text-dark mt-2" value="<%- posts.image %>">
            </div>

            <div class="form-group">
                <a href="/" class="btn btn-warning me-3">Cancel</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </form>
    </div>
    <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
    <script>tinymce.init({ selector: 'textarea' });</script>
    <%- include("./partials/footer")  %> 
